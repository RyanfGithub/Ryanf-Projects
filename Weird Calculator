import random
import math
import matplotlib.pyplot as plt


def generate_num(characters):
  num = ""
  for i in range(int(characters)):
    num = num + str(random.randint(0, 9))
  print(num)


def calc_pi(r):
  area = math.pi * int(r)**2
  print("A = " + str(area))


def create_graph(x, y, xlabel, ylabel, title):
  plt.plot(x, y)

  plt.xlabel(xlabel)
  plt.ylabel(ylabel)
  plt.title(title)

  plt.show()


while True:
  ifoptions = input("Type 'o' for options ")

  if ifoptions == "o":
    while True:
      print(
          "Type 'g' to generate a random number, type 'c' to \ncalculate the area of a \ncircle, Type 'graph' to create a graph, Type 'x' to exit"
      )

      userintent = input("What would you like to do? ")
      if userintent == "g":
        characters = input(
            "How many characters would you like your number to be? ")
        generate_num(characters)

      elif userintent == "c":
        r = input("What is the radius of your circle? ")
        calc_pi(r)

      elif userintent == "x":
        exit()

      elif userintent == "graph":
        while True:
          x = set(
              input("What are the x values? (use this format [1, 2, 3]): "))
          # Convert the string to a set
          x = set(eval(str(x)))
          break  # Remove redundant check

        while True:
          y = set(
              input("What are the y values? (use this format [1, 2, 3]): "))
          # Convert the string to a set
          y = set(eval(str(y)))
          break  # Remove redundant check

        xlabel = input("What is the x label? ")
        ylabel = input("What is the y label? ")
        title = input("What is the title? ")

        create_graph(x, y, xlabel, ylabel, title)

        xlabel = input("What is the x label? ")
        ylabel = input("What is the y label? ")
        title = input("What is the title? ")

        create_graph(x, y, xlabel, ylabel, title)

      else:
        print("Invalid input")
